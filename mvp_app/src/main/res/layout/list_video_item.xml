<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_list_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryPrueDark">

        <TextView
            android:id="@+id/video_item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@color/comm_content_title_color"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/video_item_title_tv"
            android:layout_marginBottom="@dimen/content_item_margin_bottom"
            android:layout_marginLeft="@dimen/content_item_margin"
            android:layout_marginRight="@dimen/content_item_margin"
            android:background="@color/accent"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/list_item_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_media_height"
        android:layout_below="@+id/item_list_rl"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:src="@drawable/xxx1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/post_media_height"
        android:layout_below="@+id/item_list_rl">

        <ImageView
            android:id="@+id/list_item_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/video_click_play_selector"/>
    </RelativeLayout>

</RelativeLayout>